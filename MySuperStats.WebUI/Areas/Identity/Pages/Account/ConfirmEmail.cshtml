@page "{culture}"
@model ConfirmEmailModel
@using MySuperStats.WebUI.Utils
@using CustomFramework.WebApiUtils.Contracts.Resources

@inject ILocalizationService localizer
@{
    ViewData["Title"] = localizer.GetValue("Confirmation of e-mail");
    Layout = "_LoginLayout";
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
}

<div class="register-box">
    <div class="register-logo">
        <b>@AppConstants.AppName</b>
    </div>
    <div class="register-box-body">
        <p>
            @TempData["SuccessMessage"]
            <span style="color:red;">@(Html.ValidationMessage("ModelErrors"))</span>
           <!-- @(localizer.GetValue("Thank you for confirming e-mail")) <a asp-page="./Login" asp-route-culture="@culture">@(localizer.GetValue("Please click here to login"))</a>.-->
        </p>
    </div> 
</div>
