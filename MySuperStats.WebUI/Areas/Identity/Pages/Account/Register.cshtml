@page "{culture}"
@model RegisterModel
@using MySuperStats.WebUI.Utils
@using CustomFramework.BaseWebApi.Resources
@inject ILocalizationService localizer
@{
    ViewData["Title"] = localizer.GetValue("New membership");
    Layout = "_LoginLayout";
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;    
}

<div class="register-box">
  <div class="register-logo">
    <b>@AppConstants.AppName</b>
  </div>

  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg">@(localizer.GetValue("New membership"))</p>

      <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <!-- <div asp-validation-summary="All" class="text-danger"></div> -->

        <div class="input-group mb-1">
          <input asp-for="Input.FirstName" class="form-control" placeholder="@(localizer.GetValue("FirstName"))">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-2">
          <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>

        <div class="input-group mb-1">
          <input asp-for="Input.LastName" class="form-control" placeholder="@(localizer.GetValue("LastName"))">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-2">
          <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>

        <div class="input-group mb-1">
          <input type="text" asp-for="Input.BirthDate" placeholder="@(localizer.GetValue("BirthDate"))" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="far fa-calendar-alt"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-2">
          <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
        </div>       

        <div class="input-group mb-1">
          <input asp-for="Input.Email" class="form-control"  placeholder="@(localizer.GetValue("Email"))">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-2">
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="input-group mb-1">
          <input asp-for="Input.Password" class="form-control" placeholder="@(localizer.GetValue("Password"))">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-2">
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
       
        <div class="input-group mb-1">
          <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="@(localizer.GetValue("Retype password"))">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-2">
          <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="row">
          <!--
          col-8">
            <div class="icheck-primary">
              <input type="checkbox" id="agreeTerms" name="terms" value="agree">
              <label for="agreeTerms">
               I agree to the <a href="#">terms</a>
              </label>
            </div>
          </div>
          -->
          <!-- /.col -->
          <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block btn-flat">@(localizer.GetValue("Register"))</button>
          </div>
          <!-- /.col -->
        </div>
      </form>

      <p>
          <span style="color:red;">@(Html.ValidationMessage("ModelErrors"))</span>
      </p>

      <!--
      <div class="social-auth-links text-center">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign up using
          Facebook</a>
        <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign up using
          Google+</a>
      </div>
      -->

      <br/>
      <p class="mb-1">
        <a asp-page="./Login" asp-route-culture="@culture" class="text-center">@(localizer.GetValue("I have already membership"))</a>
      </p>
      <p class="mb-1">
        <partial name="_LanguagePartial"/>
      </p>
    </div>
    <!-- /.form-box -->
  </div>
</div>
<!-- /.register-box -->

