@page "{culture}"
@model RegisterModel
@using MySuperStats.WebUI.Utils
@using CustomFramework.WebApiUtils.Contracts.Resources

@inject ILocalizationService localizer
@{
    ViewData["Title"] = localizer.GetValue("New membership");
    Layout = "_LoginLayout";
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;    
}

<div class="register-box">
  <div class="register-logo">
    <b>@AppConstants.AppName</b>
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">@(localizer.GetValue("New membership"))</p>

    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
      <div asp-validation-summary="All" class="text-danger"></div>
      <div class="form-group has-feedback">
        <input asp-for="Input.FirstName" class="form-control" placeholder="@(localizer.GetValue("FirstName"))">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
      </div>
      <div class="form-group has-feedback">
        <input asp-for="Input.LastName" class="form-control" placeholder="@(localizer.GetValue("LastName"))">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
      </div>      
      <div class="form-group has-feedback">
        <input asp-for="Input.BirthDate" class="form-control" placeholder="@(localizer.GetValue("BirthDate"))">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
        <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
      </div>         
      <div class="form-group has-feedback">
        <input asp-for="Input.Email" class="form-control"  placeholder="@(localizer.GetValue("Email"))">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>
      <div class="form-group has-feedback">
        <input asp-for="Input.Password" class="form-control" placeholder="@(localizer.GetValue("Password"))">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
      </div>
      <div class="form-group has-feedback">
        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="@(localizer.GetValue("Retype password"))">
        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
      </div>
      <div class="row">
        <!--
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox"> <a href="#">@(localizer.GetValue("I agree the terms"))</a>
            </label>
          </div>
        </div>
        -->
        <!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">@(localizer.GetValue("Register"))</button>
        </div>
        <!-- /.col -->
      </div>
    </form>

    <!--
    <div class="social-auth-links text-center">
      <p>- OR -</p>
      <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign up using
        Facebook</a>
      <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign up using
        Google+</a>
    </div>
    -->
        <br>
        <div class="row">
            <div class="col-xs-8">      
                <a asp-page="./Login" asp-route-culture="@culture" class="text-center">@(localizer.GetValue("I have already membership"))</a>
            </div>  
        </div>
        <br>        
        <div class="row">
            <div class="col-xs-8">
                <partial name="_LanguagePartial"/>
            </div>                
        </div>    

  </div>
  <!-- /.form-box -->
</div>
<!-- /.register-box -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
