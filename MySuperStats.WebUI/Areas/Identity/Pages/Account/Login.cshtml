@page
@model LoginModel
@using MySuperStats.WebUI.Utils
@{
    ViewData["Title"] = @AppConstants.Login;
    Layout = "_LoginLayout";
}

<div class="login-box">
  <div class="login-logo">
    <b>MySuperStats</b>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">@AppConstants.PleaseLogin</p>

    <form id="account" method="post">
      <div asp-validation-summary="All" class="text-danger"></div>

      <div class="form-group has-feedback">
        <input asp-for="Input.Login.UserName" class="form-control" placeholder="@AppConstants.UserName" value="yunusemre@gmail.com">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span asp-validation-for="Input.Login.UserName" class="text-danger"></span>
      </div>
      <div class="form-group has-feedback">
        <input asp-for="Input.Login.Password" class="form-control" placeholder="@AppConstants.Password" value="Test.12345">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <span asp-validation-for="Input.Login.Password" class="text-danger"></span> 
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
                <input asp-for="Input.RememberMe" />
                            @AppConstants.RememberMe
            </label>
          </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">@AppConstants.SignIn</button>
        </div>
        <!-- /.col -->
      </div>
    </form>
    @section scripts{
        <partial name="_ValidationScriptsPartial"></partial>
    }
