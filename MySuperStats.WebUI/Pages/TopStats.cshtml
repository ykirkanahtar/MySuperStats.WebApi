        <div class="table-responsive">

            <label>Sayı Krallığı</label>
            <table class="table table-bordered table-condensed table-hover table-striped">
                <tbody>
                    @foreach (var stat in Model.StatisticTable.Points)
                    {
                        <tr>
                            <td><a asp-page="PlayerDetail" asp-route-culture="@culture" asp-route-id="@stat.UserId">@(stat.UserNameSurname)</a></td>
                            <td>@(Math.Round(stat.Value))</td>
                            <td>@(stat.GameCount)</td>
