@page "{id:int}"
@using MySuperStats.WebUI.Pages
@model MySuperStats.WebUI.Pages.TopStatsModel
@{
    ViewData["Title"] = "İstatistikler";
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
}
<script>
  $(function () {
    $('#players_matches').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : false,
      'info'        : true,
      'autoWidth'   : true
    })
  })
</script>

