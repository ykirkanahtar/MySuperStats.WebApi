@page
@using MySuperStats.WebUI.Pages
@model MySuperStats.WebUI.Pages.UpdateUserProfileModel
@{
    ViewData["Title"] = "Kullanıcı Bilgileri";
}

<script>
$(document).ready(function() {
//https://uxsolutions.github.io/bootstrap-datepicker/?markup=component&format=&weekStart=&startDate=&endDate=&startView=0&minViewMode=0&maxViewMode=4&todayBtn=linked&clearBtn=false&language=tr&orientation=bottom%20auto&multidate=&multidateSeparator=&keyboardNavigation=on&forceParse=on#sandbox
$('.input-group.date').datepicker({
    todayBtn: "linked",
    language: "tr",
    orientation: "bottom auto"
});

$( "#btnUpdateEmailRequest" ).click(function(evt) {
    evt.preventDefault();
    $.ajax({
        type: "POST",
        url: "/UpdateUserProfile/?handler=UpdateEmail",
        beforeSend: function (xhr) {
            xhr.setRequestHeader("XSRF-TOKEN",
                $('input:hidden[name="__RequestVerificationToken"]').val());
                $(".overlay").show();
        },
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        data: $("#txtEmail").val(),         
        success: function(response, textStatus, xhr){
          if (response == "OK"){
            $("#errorDiv").hide();
            $("#successDiv").show();
          }
          else{
            $("#errorDiv").show();
            $("#errorMessage").text(response);                  
          }
        },
        error: function(XMLHttpRequest, textStatus, error){
          $("#errorDiv").show();
          $("#errorMessage").text("Bir hata oluştu.");
        },
        complete: function(){
          $(".overlay").hide();
        }
    });



});

} );
</script>

<!-- Main content -->
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-6">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Profilimi Güncelle</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form method="post">
          <div class="box-body">
            <div class="form-group">
              <label for="txtFirstName">İsim</label>
              <input type="text" class="form-control" id="txtFirstName" asp-for="UserUpdate.FirstName" placeholder="İsminizi giriniz">
              <span asp-validation-for="UserUpdate.FirstName" class="text-danger"></span>                        
            </div>
            <div class="form-group">
              <label for="txtSurname">Soyisim</label>
              <input type="text" class="form-control" id="txtSurname" asp-for="UserUpdate.Surname" placeholder="Soyisminizi giriniz">
              <span asp-validation-for="UserUpdate.Surname" class="text-danger"></span>                        
            </div>
            <div class="form-group">
              <label for="txtBirthDate">Doğum Tarihi</label>
              <div class="input-group date">
                <input type="text" class="form-control" asp-for="UserUpdate.BirthDate" placeholder="Doğum Tarihinizi giriniz">
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-th"></i>
                </span>
              </div>              
            </div>            
          </div>
          <!-- /.box-body -->

          <div class="box-footer">
            <input type="submit" id="btnUpdateProfile" class="btn btn-primary" asp-page-handler="UpdateProfile"
            value="Profilimi Güncelle"/>
          </div>
        </form>
      </div>
      <!-- /.box -->
    </div>
    <!--/.col (left) -->

    <div class="col-md-6">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">E-Posta Adresimi Güncelle</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form method="post">
          <div class="box-body">
            <div class="form-group">
              <label for="txtEmail">E-Posta Adresi</label>
              <input type="text" class="form-control" id="txtEmail" asp-for="EmailUpdateRequest.NewEmail" placeholder="E-Posta adresinizi giriniz">
              <span asp-validation-for="EmailUpdateRequest.NewEmail" class="text-danger"></span>                        
            </div>             
          </div>
          <!-- /.box-body -->

          <div class="box-footer">
                <input type="submit" id="btnUpdateEmailRequest" class="btn btn-primary" 
                value="E-Posta Adresimi Güncelle"/>
          </div>
        </form>
      </div>
      <!-- /.box -->
    </div>
    <!--/.col (right") -->



  </div>
  <!-- /.row -->

  <div class="container">   
    <div id="successDiv" class="alert alert-success" style="display:none">
      <strong>Başarılı!</strong> <span id="successMessage">İşlem tamamlandı, onay bağlantısı e-posta adresinize gönderildi.</span>
    </div>    
    <div id="errorDiv" class="alert alert-danger" style="display:none">
      <strong>Hata Oluştu!</strong> <span id="errorMessage">Kayıt güncellenirken bir hata oluştu.</span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <span style="color:red;">@(Html.ValidationMessage("ModelErrors"))</span>
    <div>
  </div>

</section>
<!-- /.content -->