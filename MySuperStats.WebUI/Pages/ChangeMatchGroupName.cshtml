@page "{id:int}"
@using CustomFramework.BaseWebApi.Resources
@using MySuperStats.WebUI.Pages
@model MySuperStats.WebUI.Pages.ChangeMatchGroupNameModel
@inject ILocalizationService localizer

@{
    ViewData["Title"] = localizer.GetValue("CreateNewMatchGroup");
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;    
}

<!-- Main content -->
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-6">
      <!-- general form elements -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">@(localizer.GetValue("ChangeGroupName"))</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form method="post">
          <div class="card-body">

            <div class="form-group">
              <label>@(localizer.GetValue("Enter the name of the match group"))</label>              
              <div class="input-group-prepend">
              <input asp-for="MatchGroupRequest.GroupName" class="form-control" type="text" placeholder="@(localizer.GetValue("Enter the name of the match group"))">
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-edit"></span>
                    </div>
                  </div>
              </div>  
              <span asp-validation-for="MatchGroupRequest.GroupName" class="text-danger"></span>
            </div> 
            <!-- /.form group --> 
                    
          </div>
          <div class="card-footer">
            <input type="submit" id="btnChangeGroupName" asp-page-handler="ChangeGroupName"  class="btn btn-primary" value="@(localizer.GetValue("ChangeGroupName"))"/>
          </div>          
        </form>

    </div>
    <!--/.col (left) -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-md-12">
      <span style="color:red;">@(Html.ValidationMessage("ModelErrors"))</span>
    <div>
  </div>  
</section>
<!-- /.content -->