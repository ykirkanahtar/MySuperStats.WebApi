@page
@using CustomFramework.WebApiUtils.Contracts.Resources

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor;
@inject ILocalizationService localizer
@model ErrorModel

@{
    ViewData["Title"] = localizer.GetValue("AnErrorHasOccured");
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;    
}

<div style="margin-left: 20px;">
    <h1 class="text-danger">@(localizer.GetValue("AnErrorHasOccured"))</h2>
    <h2 class="text-danger">@(Model.ExceptionMessage)</h2>

@{
    string referer = httpContextAccessor.HttpContext.Request.Headers["Referer"].ToString();
    Uri baseUri = new Uri(referer);
}

</div>