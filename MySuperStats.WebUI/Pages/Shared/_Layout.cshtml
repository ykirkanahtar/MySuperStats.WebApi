      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu" data-widget="tree">              
        @{
            var getUrl = $"{appSettings.WebApiUrl}{ApiUrls.GetAllMatchGroupsByUserId}{loggedUser.Id}";
            var response = webApiConnector.GetAsync(getUrl, SessionUtil.GetToken(session)).Result;
            
            if(response.StatusCode != HttpStatusCode.OK)
            {
              throw new Exception(response.Message);
            }

            var mygroups = JsonConvert.DeserializeObject<List<MatchGroupResponse>>(response.Result.ToString());
            foreach(var group in mygroups)
            {
              
              var permissionArray = $"permissions={PermissionEnum.CreateBasketballStat}&permissions={PermissionEnum.AddUserToRole}";
              var permissionGetUrl = $"{appSettings.WebApiUrl}{ApiUrls.GetPermissions}userId/{loggedUser.Id}/matchGroupId/{group.Id}?{permissionArray}";
              var permissionResponse = webApiConnector.GetAsync(permissionGetUrl, SessionUtil.GetToken(session)).Result;
              if(permissionResponse.StatusCode != HttpStatusCode.OK)
              {
                throw new Exception(permissionResponse.Message);
              }
              var permissions = JsonConvert.DeserializeObject<PermissionCheckerResponse>(permissionResponse.Result.ToString());

              <li class="treeview" id="@group.Id">
                  <a href="#">
                      <i class="fa fa-group"></i>
                      <span>@(group.GroupName)</span>
                      <span class="pull-right-container">
                          <i class="fa fa-angle-left pull-right"></i>
                      </span>
                  </a>
                  <ul class="treeview-menu" id="@group.Id">  
                      <li>
                          <a id="@group.Id" asp-page="/MatchGroupDetail" asp-route-culture="@culture" asp-route-id="@group.Id">
                              <i class="fa fa-group"></i>
                              Grup Bilgileri
                          </a>
                      </li>   
                      <li>
                        <a id="@group.Id" class="a-match-group" asp-page="/Matches" asp-route-culture="@culture" asp-route-id="@group.Id">
                          <i class="fa fa-trophy"></i> <span>Karşılaşmalar</span>
                        </a>
                      </li>
                      <li>
                        <a id="@group.Id" class="a-match-group" asp-page="/Players" asp-route-culture="@culture" asp-route-id="@group.Id">
                          <i class="fa fa-male"></i> <span>Oyuncular</span>
                        </a>
                      </li> 
                      <li>
                        <a id="@group.Id" class="a-match-group" asp-page="/TopStats" asp-route-culture="@culture" asp-route-id="@group.Id">
                          <i class="fa fa-table"></i> <span>Genel İstatistikler</span>
                        </a>
                      </li>   
                      @{
                        if(Functions.GetPermissionValue(permissions.PermissionDetails, PermissionEnum.CreateBasketballStat.ToString()) == true) 
                        { 
                          <li>
                            <a id="@group.Id" class="a-match-group" asp-page="/BasketballStatsEntry" asp-route-culture="@culture" asp-route-id="@group.Id">
                              <i class="fa fa-edit"></i> <span>İstatistik Girişi</span>
                            </a>
                          </li>                               
                        }
                        if(Functions.GetPermissionValue(permissions.PermissionDetails, PermissionEnum.AddUserToRole.ToString()) == true) 
                        {
                          <li>
                            <a id="@group.Id" class="a-match-group" asp-page="/PlayerPermissions" asp-route-culture="@culture" asp-route-id="@group.Id">
                              <i class="fa fa-check-circle"></i> <span>Kullanıcı Yetkileri</span>
                            </a>
                          </li>     
                        }                        
                      }                                                                                                     
                  </ul>
              </li>                                                                   
            }
        }
        <li class="treeview" id="-1">
            <a href="#">
                <i class="fa fa-gear"></i>
                <span>Ayarlar</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
