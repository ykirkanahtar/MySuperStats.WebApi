    <div id="divCreateTeams" style="display:none">
        <div class="row">
          <!-- left column -->
          <div class="col-md-5">
            <!-- general form elements -->
            <div class="box box-primary">
              <!-- /.box-header -->
                <div class="box-body">
                  <div class="form-group">
                    <label>İlk takım oyuncularını seçiniz</label>
