          </div>
          <!--/.col (left) -->

          <!-- middle column -->
          <div class="col-md-5">
            <!-- general form elements -->
            <div class="box box-primary">
              <!-- /.box-header -->
                <div class="box-body">
                  <div class="form-group">
                    <label>İkinci takım oyuncularını seçiniz</label>              
                      <div id="second-team-players"> </div>
