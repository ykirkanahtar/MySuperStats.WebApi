              <!-- general form elements -->
              <div class="box box-primary">
                <!-- /.box-header -->
                  <div class="box-body">
                    <div class="form-group">
                      <label>İlk takım:</label><span id="firstTeamScore"></span>
                      <div id="first-team-stats"> </div>
                    </div>
                  </div>
                  <!-- /.box-body -->
              </div>
              <!-- /.box -->
            </div>
