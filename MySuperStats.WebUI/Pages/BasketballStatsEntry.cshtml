            </div>
            <!-- /.box -->
          </div>
          <!--/.col (middle) -->

          <!-- right column -->
          <div class="col-md-2" style="vertical-align: middle;">
              <input type="submit" id="btnBackToMatchDetails" class="btn btn-primary" value="Geri Dön" style="width:150px"/>
              <br>
              <br>
              <input type="submit" id="btnSetTeamPlayers" class="btn btn-primary" value="Takımları Oluştur" style="width:150px"/>
