        <div class="row">
            <div class="col-md-12">
              <!-- general form elements -->
              <div class="box box-primary">
                <!-- /.box-header -->
                  <div class="box-body">
                    <div class="form-group">
                      <label>İkinci takım:</label><span id="secondTeamScore"></span>                  
                      <div id="second-team-stats"> </div>
