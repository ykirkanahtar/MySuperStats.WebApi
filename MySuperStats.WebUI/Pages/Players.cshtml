@page "{id:int}"
@using CustomFramework.WebApiUtils.Contracts.Resources

@using MySuperStats.WebUI.Pages
@model MySuperStats.WebUI.Pages.PlayersModel
@inject ILocalizationService localizer

@{
    ViewData["Title"] = localizer.GetValue("Players");
    var culture = System.Globalization.CultureInfo.CurrentCulture.Name;
}
<script>
  $(function () {
    $('#basketball_players').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : true
    })
  })
</script>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">@(localizer.GetValue("Players"))</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="basketball_players" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>@(localizer.GetValue("FirstNameLastName"))</th>
                </tr>
                </thead>
                <tbody>
                   @foreach (var player in Model.Players)
                    {
                        <tr>
                            <td><a asp-page="PlayerDetail" asp-route-culture="@culture" asp-route-id="@player.Id">@($"{player.FirstName} {player.LastName}")</a></td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                <tr>
                  <th>@(localizer.GetValue("FirstNameLastName"))</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
